<h3>Conversation Code: {{model.code}}</h3>
<p>{{link-to 'Edit' 'conversations.conversation.edit' model}}</p>
<div class="panel-body">
	<strong>Participants:</strong>
	<ul class="chat list-unstyled">
	{{#each model.users as |user| }}
	  <li class="left clearfix">
	    <span class="chat-img pull-left">
	      <img src="http://placehold.it/50/55C1E7/fff&text={{avatarInitials user.firstName}}{{ avatarInitials user.lastName}}" alt="User Avatar" class="img-circle" />
	      {{fullName  user.firstName " " user.lastName}}
	     </span>
	  </li>
	{{/each}}
	</ul>
</div>
{{link-to 'Invite to thread' 'conversations.conversation.invite-user' model}}
{{outlet}}
