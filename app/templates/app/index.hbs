<div class='container'>
  <div class='col-md-2'>
		{{#if session.isAuthenticated}}
		<div class="panel panel-default">
		  <!-- Default panel contents -->
		  <div class="panel-heading">
		    Conversations
		  </div>
      <div class="list-group">
        {{#each sessionUser.user.conversations as |convo|}}
        <a class="list-group-item">{{link-to convo.code 'app.conversations.conversation' convo}}</a>
        {{/each}}
      </div>
		</div>
		{{/if}}
		{{#link-to 'app.conversations.new'}}
      <a class="btn btn-success"role="button">New Conversation</a>
    {{/link-to}}
	</div>
	<div class='col-md-10'>
	  {{outlet}}
	  <div class="well">MESSAGE THREAD GOES HERE!</div>
	</div>
</div>
