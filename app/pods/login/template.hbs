<div class='col-md-6 col-md-offset-1'>
  <div class='login-registration-form'>
		<h3 class='login-register-header'>Login or {{link-to 'Sign Up' 'register-user'}}</h3>
	  <form {{action 'login' identification password on='submit'}}>
	    <div class='input-group'>
	        <span class='input-group-addon'><i class='fa fa-user'></i></span>
	        {{input id='Email' placeholder='Enter Login' value=identification class='form-control'}}
	    </div>
      <span class='help-block'></span>
      <div class='input-group'>
        <span class='input-group-addon'><i class='fa fa-lock'></i></span>
        {{input id='password' placeholder='Enter Password' type='password' value=password class='form-control'}}
      </div>
      {{#if errorMessage}}
        <span class='help-block'>Invalid login</span>
      {{/if}}
      <button {{ action 'login' identification password on='submit' }} class='btn btn-primary btn-lg btn-block'> Login </button>
	  </form>
	</div>
</div>
{{outlet}}