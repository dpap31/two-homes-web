{{#paper-content class='add-users'}}

  {{#paper-card class='parenting-group-members'}}
    {{#paper-card-title class="card-header"}}
      {{#paper-card-title-text}}
        <h2>Group Members</h2>
      {{/paper-card-title-text}}
    {{/paper-card-title}}
  {{#paper-card-content class="secondary-card-body"}}
    {{#paper-list}}
      {{#each model.parentingGroup.users as |user| }}
        {{#paper-item class="md-3-line"}}
          {{user-avatar user=user size="md"}}
          <div class="md-list-item-text">
            <h3>{{user.firstName}} {{user.lastName}}</h3>
            <h4>{{user.email}}</h4>
          </div>
          {{paper-divider}}
          {{/paper-item}}
        {{/each}}
      {{/paper-list}}
    {{/paper-card-content}}
  {{/paper-card}}

  {{#paper-card}}
    {{#paper-card-title class="card-header"}}
      {{#paper-card-title-text}}
        <h3>Invite New User</h3>
      {{/paper-card-title-text}}
    {{/paper-card-title}}
    {{#paper-card-content class="md-padding card-body"}}
      {{#if responseMessage}}
        <div class="alert alert-success">{{responseMessage}}</div>
      {{/if}}
      {{paper-input label="Email" type="email" value=emailAddress icon="email" icon-class="email" required=true}}
      {{#paper-button disabled=isDisabled primary=true raised=true action='sendInvite'}}Send invitation{{/paper-button}}
    {{/paper-card-content}}
  {{/paper-card}}
{{/paper-content}}
{{outlet}}

