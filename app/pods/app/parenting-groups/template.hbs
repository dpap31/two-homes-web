<div layout='flex' class='md-padding'>
  <div flex=1>
    <h2>Parenting Groups</h2>
  </div>
  <div>
    {{#paper-button raised=true primary=true action="save" iconButton=true class='new-pg'}} {{paper-icon "library add"}} New Group{{/paper-button}}
  </div>
</div>
<br>
{{#parenting-group-filter
   filter=(action 'filterByUser') as |memberships|}}
  <ul class="results">
    {{#each memberships as |membership|}}
      <div class="home-card">
       {{#paper-card}}
       {{#paper-toolbar class='pg-header'}}
         {{#paper-button action='goToPg' param=membership.parentingGroup}}<h2>Group {{membership.parentingGroup.id}}</h2>{{/paper-button}}
       {{/paper-toolbar}}
         {{#paper-card-title class="card-body"}}
           {{#paper-card-title-text}}
             <ul class="group-members">
               {{#each membership.parentingGroup.users as |user| }}
                 <li id="member">{{user.firstName}} {{user.lastName}}</li>
               {{/each}}
             </ul>
           {{/paper-card-title-text}}
         {{/paper-card-title}}
         <div class="md-actions" layout="row" layout-align="end center">
             {{#paper-button action='goToPgInvite' param=membership.parentingGroup}}Invite{{/paper-button}}
             {{#paper-button action='goToPg' param=membership.parentingGroup}}View{{/paper-button}}
         </div>
       {{/paper-card}}
       </div>
    {{else}}
      <div class='no-results'>
        {{paper-icon "find in page" size=5}}
        <h3>No Results</h3>
        <p>We couldnâ€™t find any parenting groups matching your search</p>
      </div>
    {{/each}}
  </ul>
{{/parenting-group-filter}}



