<div class='col-md-6 col-md-offset-1'>
<h2>Signup</h2>
  {{model}}
    <form>
      <div class='form-group'>
        <label class='sr-only'>First Name</label>
        {{input value=model.firstName class='form-control' placeholder='First Name'}}
      </div>
      <div class='form-group'>
        <label class='sr-only'>Last Name</label>
        {{input value=model.lastName class='form-control' placeholder='Last Name'}}
      </div>
      <div class='form-group'>
        <label class='sr-only'>Email</label>
        {{#input value=model.email class='form-control' placeholder='Email'}}
          {{model.email}}
        {{/input}}
      </div>
      <div class='form-group'>
        <label class='sr-only'>Password</label>
        {{input type='password' value=model.password class='form-control' placeholder='Password'}}
      </div>
      <div class='form-group'>
        <label class='sr-only'>Persona</label>
        {{input value=model.persona class='form-control' placeholder='Persona'}}
      </div>
      <button {{ action 'saveUser' model }} class='btn btn-primary btn-lg btn-block'> Register </button>
    </form>
</div>

{{outlet}}
