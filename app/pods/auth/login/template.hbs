{{#paper-content class="auth-content md-padding"}}
  {{#paper-card class="auth-card primary"}}
    {{#paper-card-title class="card-header"}}
      {{#paper-card-title-text}}
        <img id="logo" src="assets/images/logo-white.png">
        <h3 class='login-register-header'>Login to TwoHomes</h3>
      {{/paper-card-title-text}}
    {{/paper-card-title}}
    {{#paper-card-content class="md-padding"}}
      <form {{action 'doLogin' identification password on='submit'}}>
      {{paper-input label="Email" type="email" value=identification icon="email" icon-class="person" required=true}}
      {{paper-input placeholder="Password" type="password" value=password icon="lock"}}
      {{#paper-button raised=true primary=true}}
        Login
      {{/paper-button}}
      </form>
    {{/paper-card-content}}
  {{/paper-card}}

  {{#paper-card class="auth-card secondary"}}
    {{#paper-card-content}}
      New to TwoHomes? {{link-to 'Create an account.' 'auth.register'}}
    {{/paper-card-content}}
  {{/paper-card}}
{{/paper-content}}
{{outlet}}
