{{#paper-content class="md-padding"}}
  {{#paper-card}}
    {{#paper-card-title}}
      {{#paper-card-title-text}}
        <h3 class="login-register-header">Sign Up</h3>
      {{/paper-card-title-text}}
    {{/paper-card-title}}
  {{#paper-card-content}}
    {{paper-input label="First Name" value=model.user.firstName icon="person" icon-class="name"}}
    {{paper-input label="Last Name" value=model.user.lastName icon="person" icon-class="name"}}
    {{paper-input label="Email" type="email" value=model.user.email icon="email" icon-class="email" required=true}}
    {{paper-input placeholder="Password" type="password" value=model.user.password icon="lock"}}
    {{#paper-select placeholder="Persona" model=model.user.persona}}
        {{#paper-option value="user"}}
          User
        {{/paper-option}}
        {{#paper-option value="moderator"}}
          Moderator
        {{/paper-option}}
    {{/paper-select}}
    {{#paper-button raised=true action="save" param=model.user}}Register{{/paper-button}}
    {{/paper-card-content}}
  {{/paper-card}}
{{/paper-content}}

{{outlet}}

